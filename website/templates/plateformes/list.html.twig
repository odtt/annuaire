<div class="row">
    {% for p in plateforms %}
        <div class="col-md-6 col-lg-4 wow bounceInUp platforms" data-wow-duration="1.4s" data-platform="{{ {
            id: p.id,
            nom: p.nom,
            description: p.description,
            categorie: p.categorie.nom,
            url: p.url,
            logo: p.urlLogo,
        } | json_encode() }}">
            <div class="box">
                <div class="icon" style="background: #fceef3;"><i class="ion-ios-heart-outline" style="color: #ff689b;"></i></div>
                <h4 class="title"><a href="#" data-toggle="modal" data-target=".bd-example-modal-lg">{{ p.nom }}</a></h4>
                {# <h4 class="title"><a href="{{ path('show.category', {id: c.id}) }}">{{ c.nom }}</a></h4> #}
                <p class="description">{{ p.description[:80] ~ '...' }}</p>
            </div>
        </div>
    {% endfor %}
</div>

<!-- Large Modal -->
<div class="modal fade bd-example-modal-lg" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bold" id="exampleModalLabel">Large Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="exampleModalBody">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>